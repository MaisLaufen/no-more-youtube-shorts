{
  "name": "No More YouTube Shorts",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Блокирует Shorts на YouTube.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "No Shorts"
  },
  "icons": {
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/shorts/*"],
      "js": ["content/shorts_blocker.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["ui/blockedshorts.html", "ui/blockedshorts.css", "img/banner.gif"],
    "matches": ["*://www.youtube.com/*"]
  }]
}